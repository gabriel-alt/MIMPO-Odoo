<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@id='informations']" position="after">
            <div class="row mt-4 mb-4" id="informations_2">
                <div t-if="doc.sir_number" class="col-auto col-3 mw-100 mb-2">
                    <strong>Referencia SIR:</strong>
                    <p class="m-0" t-field="doc.sir_number"/>
                </div>
                <div t-if="doc.order_number" class="col-auto col-3 mw-100 mb-2">
                    <strong>Orden:</strong>
                    <p class="m-0" t-field="doc.order_number"/>
                </div>
                <div t-if="doc.operation_type" class="col-auto col-3 mw-100 mb-2">
                    <strong>Tipo de servicio:</strong>
                    <p class="m-0" t-field="doc.operation_type"/>
                </div>
                <div t-if="doc.ref_document" class="col-auto col-3 mw-100 mb-2">
                    <strong>Clave documento:</strong>
                    <p class="m-0" t-field="doc.ref_document"/>
                </div>
            </div>
            <div class="row mt-4 mb-4" id="informations_3">
                <div t-if="doc.total_taxes" class="col-auto col-3 mw-100 mb-2">
                    <strong>Total impuestos:</strong>
                    <p class="m-0" t-field="doc.total_taxes"/>
                </div>
                <div t-if="doc.amount_dta" class="col-auto col-3 mw-100 mb-2">
                    <strong>DTA:</strong>
                    <p class="m-0" t-field="doc.amount_dta"/>
                </div>
                <div t-if="doc.amount_adv" class="col-auto col-3 mw-100 mb-2">
                    <strong>ADV:</strong>
                    <p class="m-0" t-field="doc.amount_adv"/>
                </div>
                <div t-if="doc.amount_ieps" class="col-auto col-3 mw-100 mb-2">
                    <strong>IEPS:</strong>
                    <p class="m-0" t-field="doc.amount_ieps"/>
                </div>
                <div t-if="doc.amount_other" class="col-auto col-3 mw-100 mb-2">
                    <strong>Otros:</strong>
                    <p class="m-0" t-field="doc.amount_other"/>
                </div>
            </div>
            <div class="row mt-4 mb-4" id="informations_4">
                <div t-if="doc.amount_iva" class="col-auto col-3 mw-100 mb-2">
                    <strong>IVA:</strong>
                    <p class="m-0" t-field="doc.amount_iva"/>
                </div>
                <div t-if="doc.amount_insurance" class="col-auto col-3 mw-100 mb-2">
                    <strong>Seguro:</strong>
                    <p class="m-0" t-field="doc.amount_insurance"/>
                </div>
                <div t-if="doc.amount_expense" class="col-auto col-3 mw-100 mb-2">
                    <strong>Gastos:</strong>
                    <p class="m-0" t-field="doc.amount_expense"/>
                </div>
                <div t-if="doc.amount_ded_other" class="col-auto col-3 mw-100 mb-2">
                    <strong>Otros:</strong>
                    <p class="m-0" t-field="doc.amount_ded_other"/>
                </div>
                <div t-if="doc.total_inc" class="col-auto col-3 mw-100 mb-2">
                    <strong>Incrementables:</strong>
                    <p class="m-0" t-field="doc.total_inc"/>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
