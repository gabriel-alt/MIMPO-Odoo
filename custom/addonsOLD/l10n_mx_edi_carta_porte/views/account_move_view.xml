<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_l10n_mx_edi_invoice_form_inherit" model="ir.ui.view">
            <field name="name">l10n_mx_edi.invoice.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='other_info']" position="inside">
                    <group attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund'))]}">
                        <group string="Complemento Carta Porte">
                            <field name="carta_porte"/>
                        </group>
                    </group>
                </xpath>
               <xpath expr="//notebook" position="inside">
                         <page name="invoice_line_factura" string="Mercancía a trasladar" attrs="{'invisible': [('carta_porte','=',False)]}">
                            <field name="factura_line_ids" attrs="{'readonly':[('state','!=','draft')]}">
                            <tree editable="bottom">
                                <control>
                                     <create string="Agregar línea"/>
                                </control>
                                <field name="currency_id" invisible="1"/>  
                                <field name="product_id" string="Producto"/>
                                <field name="name" string="Nombre"/>
                                <field name="pedimento" widget="many2many_tags" />
                                <field name="quantity" string="Cantidad"/>
                                <field name="price_unit" string="Precio Unitario"/>
                                <field name="pesoenkg"/>
                                <field name="invoice_line_tax_ids" widget="many2many_tags" invisible="1"/>
                                <!--<field name="guiaid_numero"/>
                                <field name="guiaid_descrip"/>
                                <field name="guiaid_peso"/>-->
                                <field name="price_subtotal" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </tree>
                            </field>
                        </page>
                        <page name="carta_porte" string="Carta Porte" attrs="{'invisible': [('carta_porte','=',False)]}">
                            <group cols="4">
                                <group string="Atributos de carta porte">
                                    <field name="tipo_transporte" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    <field name="transpinternac" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    <field name="entradasalidamerc" attrs="{'readonly':[('state','!=','draft')], 'invisible': [('transpinternac','!=','Sí')]}"/>
                                    <field name="viaentradasalida" attrs="{'readonly':[('state','!=','draft')], 'invisible': [('transpinternac','!=','Sí')]}"/>
                                    <!--<field name="totaldistrec" attrs="{'readonly':[('state','!=','draft')]}"/>-->
                                    <field name="uuidcomercioext" attrs="{'readonly':[('state','!=','draft')], 'invisible': ['|', ('transpinternac','!=','Sí'), ('entradasalidamerc','!=','salida')]}"/>
                                    <field name="paisorigendestino" attrs="{'readonly':[('state','!=','draft')], 'invisible': [('transpinternac','!=','Sí')]}"/>
                                </group>
                                <group string="Atributos de mercancias">
                                    <field name="pesobrutototal" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    <field name="unidadpeso" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    <field name="pesonetototal" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    <field name="numerototalmercancias" attrs="{'readonly':[('state','!=','draft')]}"/>
                                </group>
                            </group>
                        </page>
                        <page name="ccp_ubicaciones" string="Ubicaciones" attrs="{'invisible': [('carta_porte','=',False)]}">
                          <field name="ubicaciones_line_ids" attrs="{'readonly':[('state','!=','draft')]}" context="{'default_tipo_transporte' : tipo_transporte}">
                            <tree editable="bottom">
                                <control>
                                    <create string="Agregar línea"/>
                                </control>
                                <field name="tipo_transporte" invisible="1"/>
                                <field name="tipoubicacion" />
                                <field name="contacto" />
                                <field name="fecha" />
                                <field name="tipoestacion" attrs="{'invisible': [('tipo_transporte','==','01')] }"/>
                                <field name="numestacion" attrs="{'invisible': [('tipo_transporte','==','01')] }"/>
                                <field name="distanciarecorrida" attrs="{'invisible': [('tipo_transporte','!=','01')] }"/>
                            </tree>
                          </field>
                        </page>
                        <page name="ccp_autotransporte" string="Datos de transporte" attrs="{'invisible': [('carta_porte','=',False)]}">
                            <group cols="4">
                                <group string="Generales">
                                    <field name="permisosct" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    <field name="numpermisosct" attrs="{'readonly':[('state','!=','draft')]}"/>
                                </group>
                                <group>
                                </group>
                                <group string="Autotransporte"  attrs="{'invisible':[('tipo_transporte','!=','01')]}">
                                    <field name="autotrasporte_ids" attrs="{'readonly':[('state','!=','draft')]}"/>
                                </group>
                                <group attrs="{'invisible':[('tipo_transporte','!=','01')]}">
                                    <field name="remolque_line_ids" attrs="{'readonly':[('state','!=','draft')]}">
                                        <tree editable="bottom">
                                            <control>
                                               <create string="Agregar línea"/>
                                            </control>
                                           <field name="subtipo_id" />
                                           <field name="placa" />
                                        </tree>
                                    </field>
                                </group>
                                <group string="Seguro de mercancías" attrs="{'invisible':[('tipo_transporte','!=','01')]}">
                                    <field name="nombreaseg_merc" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    <field name="numpoliza_merc" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    <field name="primaseguro_merc" attrs="{'readonly':[('state','!=','draft')]}"/>
                                </group>
                                <group string="Seguro medioambiental" attrs="{'invisible':[('tipo_transporte','!=','01')]}">
                                    <field name="seguro_ambiente" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    <field name="poliza_ambiente" attrs="{'readonly':[('state','!=','draft')]}"/>
                                </group>
                                <group string="Aereo"  attrs="{'invisible':[('tipo_transporte','!=','03')]}">
                                    <field name="numeroguia" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    <field name="lugarcontrato" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    <field name="transportista_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    <field name="embarcador_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    <field name="matriculaaeronave" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    <field name="cargoportasacion" attrs="{'readonly':[('state','!=','draft')]}"/>
                                </group>
                            </group>
                        </page>
                        <page name="ccp_figuratrans" string="Figura transporte" attrs="{'invisible': [('carta_porte','=',False)]}">
                                <group string="Figura transporte">
                                    <field name="figuratransporte_ids" attrs="{'readonly':[('state','!=','draft')]}">
                                        <tree editable="bottom">
                                           <control>
                                               <create string="Agregar línea"/>
                                           </control>
                                           <field name="tipofigura" />
                                           <field name="figura_id" />
                                           <field name="partetransporte" widget="many2many_tags"/>
                                        </tree>
                                    </field>
                                </group>
                        </page>
            </xpath>
            </field>
        </record>
    </data>
</odoo>
