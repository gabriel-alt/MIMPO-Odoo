<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<record id="view_order_form" model="ir.ui.view">
		<field name="name">view_order_form.mpo_transport_request</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form"/>
		<field name="arch" type="xml">
			<xpath expr="//group[@name='sale_shipping']" position="inside">
				<field name="request_purchase" readonly="1"/>
				<field name="load_order_id" invisible="1"/>
                <field name="transport_request_id" readonly="1" attrs="{'invisible': [('request_purchase', '=', False)]}"/>
			</xpath>
		</field>
	</record>
</odoo>