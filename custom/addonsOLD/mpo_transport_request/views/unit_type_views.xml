<odoo>
    <record id="unit_type_view_tree" model="ir.ui.view">
        <field name="name">unit.type.view.tree</field>
        <field name="model">unit.type</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="unit_type_action" model="ir.actions.act_window">
        <field name="name">Unit Type</field>
        <field name="res_model">unit.type</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>
