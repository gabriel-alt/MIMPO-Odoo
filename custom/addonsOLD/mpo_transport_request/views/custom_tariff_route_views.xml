<odoo>
    <record id="custom_tariff_route_tree_view" model="ir.ui.view">
        <field name="name">custom.tariff.route.tree</field>
        <field name="model">custom.tariff.route</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="origin_id"/>
                <field name="destiny_id"/>
                <field name="unit_type_id"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="custom_tariff_route_form_view" model="ir.ui.view">
        <field name="name">custom.tariff.route.form</field>
        <field name="model">custom.tariff.route</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="e.g. Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="origin_id"/>
                            <field name="destiny_id"/>
                            <field name="unit_type_id"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="custom_tariff_route_search_view" model="ir.ui.view">
        <field name="name">custom.tariff.route.search</field>
        <field name="model">custom.tariff.route</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <separator/>
                <filter string="All" name="all" domain="['|', ('active', '=', False), ('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Origin" name="origin" domain="[]" context="{'group_by': 'origin_id'}"/>
                    <filter string="Destiny" name="destiny" domain="[]" context="{'group_by': 'destiny_id'}"/>
                    <filter string="Unit Type" name="unit_type" domain="[]" context="{'group_by': 'unit_type_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_custom_tariff_route" model="ir.actions.act_window">
        <field name="name">Routes</field>
        <field name="res_model">custom.tariff.route</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="custom_tariff_route_search_view"/>
        <field name="context">{'search_default_all': 1}</field>
    </record>

</odoo>