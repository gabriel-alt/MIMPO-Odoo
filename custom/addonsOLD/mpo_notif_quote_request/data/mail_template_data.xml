<?xml version="1.0"?>
<odoo>
    <data noupdate="1">

        <record id="payment_request_review_notif_mail_template" model="mail.template">
            <field name="name">Purchase: Payment Request Review Notification</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="subject">New Payment Request</field>
            <field name="body_html" type="html">
<div>
    Dear Control Desk,<br/>
    You have a new request to review.<br/><br/>
    New payment request <t t-out="object.name or ''">Request</t>, please review.
    <br/><br/>
    <div style="margin: 16px 0px 16px 0px;" t-if='object.get_to_purchase_order_url()'>
        <a t-att-href="(object.get_to_purchase_order_url())"
            style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
            View Request
        </a>
    </div>
    <br/>
    Thank you.
</div>
            </field>
            <field name="report_template" ref="purchase.report_purchase_quotation"/>
            <field name="report_name">quote_request_{{ (object.name or '').replace('/','_') }}</field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="False"/>
        </record>
    </data>
</odoo>