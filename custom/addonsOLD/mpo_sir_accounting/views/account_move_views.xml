<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">view.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="mpo_sir.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
				<button name="action_change_sir_ref" string="Change SIR Ref"
                    attrs="{'invisible': ['|', ('state', '!=', 'posted'), ('move_type', 'not in', ['out_invoice'])]}"
                    class="oe_highlight" type="object" groups="account.group_account_manager" />
			</xpath>
            <xpath expr="//page[@id='invoice_tab']/field[@name='invoice_line_ids']" position="attributes">
				<attribute name="context">{'default_sir_id': sir_id}</attribute>
			</xpath>
			<xpath expr="//page[@id='aml_tab']/field[@name='line_ids']" position="attributes">
				<attribute name="context">{'default_sir_id': sir_id}</attribute>
			</xpath>
        </field>
    </record>

</odoo>
