<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Disable noupdate for update record rule-->
    <function name="write" model="ir.model.data">
        <function name="search" model="ir.model.data">
            <value eval="[('module', 'in', ['fleet']), ('name', 'in', ['fleet_vehicle_state_new_request', 'fleet_vehicle_state_to_order', 'fleet_vehicle_state_registered', 'fleet_vehicle_state_downgraded'])]"/>
        </function>
        <value eval="{'noupdate': False}"/>
    </function>

    <record id="fleet.fleet_vehicle_state_new_request" model="fleet.vehicle.state">
        <field name="name">Available</field>
        <field name="sequence">1</field>
        <field name="state_category">available</field>
    </record>

    <record id="fleet.fleet_vehicle_state_to_order" model="fleet.vehicle.state">
        <field name="name">Assigned</field>
        <field name="sequence">3</field>
        <field name="state_category">assigned</field>
    </record>

    <record id="fleet.fleet_vehicle_state_registered" model="fleet.vehicle.state">
        <field name="name">Traveling</field>
        <field name="sequence">5</field>
        <field name="state_category">traveling</field>
    </record>

    <record id="fleet.fleet_vehicle_state_downgraded" model="fleet.vehicle.state">
        <field name="name">In service</field>
        <field name="sequence">7</field>
        <field name="state_category">service</field>
    </record>

    <function name="write" model="ir.model.data">
        <function name="search" model="ir.model.data">
            <value eval="[('module', 'in', ['fleet']), ('name', 'in', ['fleet_vehicle_state_new_request', 'fleet_vehicle_state_to_order', 'fleet_vehicle_state_registered', 'fleet_vehicle_state_downgraded'])]"/>
        </function>
        <value eval="{'noupdate': True}"/>
    </function>
</odoo>
