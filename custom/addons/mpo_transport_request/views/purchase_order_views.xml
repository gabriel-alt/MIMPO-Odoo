<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.view.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='reminder']" position="after">
				<field name="request_beneficiary_id"/>
			</xpath>
            <xpath expr="//group[@name='invoice_info']" position="inside">
                <field name="request_purchase"/>
			</xpath>
            <xpath expr="//page[@name='purchase_delivery_invoice']" position="after">
                <page name="transport_information" string="Transport Information"
                    attrs="{'invisible':[('request_purchase', '=', False)]}">
                    <group>
                        <group>
                            <field name="transport_request_id" readonly="1" force_save="1"
                                options="{'no_open': True, 'no_create': True}"/>
                            <field name="load_order_id" invisible="1"/>
                            <field name="request_purchase_vehicle"/>
                            <field name="request_purchase_tow"/>
                        </group>
                        <group>
                            <group>
                                <field name="purchase_origin_id" context="{'show_address': 1}"
                                    options='{"always_reload": True, "highlight_first_line": True}'/>
                                <field name="purchase_destiny_id" context="{'show_address': 1}"
                                    options='{"always_reload": True, "highlight_first_line": True}'/>
                                <field name="purchase_vehicle_tag"/>
                                <field name="purchase_dolly"/>
                                <field name="purchase_chassis"/>
                                <field name="purchase_chassis2"/>
                            </group>
                            <group>
                                <field name="purchase_departure_date"/>
                                <field name="purchase_arrive_date"/>
                            </group>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>