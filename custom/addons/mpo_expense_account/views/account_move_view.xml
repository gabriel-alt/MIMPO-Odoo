<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_mpo_expense_account" model="ir.ui.view">
        <field name="name">account.move.form.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group[1]/group[@id='header_right_group']/div[@name='journal_div']" position="after">
                <field name="to_agency" attrs="{'invisible': [('move_type', 'not in', ['in_invoice', 'in_refund'])]}" widget="boolean_toggle"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']" position="attributes">
                <attribute name="attrs">{'readonly': [('parent.to_agency', '=', False), ('parent.move_type', 'in', ('in_invoice', 'in_refund'))]}</attribute>
            </xpath>
            <xpath expr="//sheet/notebook/page[@id='other_tab_entry']" position="after">
                <page name="cfdi" string="CFDI">
                    <group>
                        <group>
                            <field name="rfc_client"/>
                        </group>
                        <group>
                            <field name="client_id"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>