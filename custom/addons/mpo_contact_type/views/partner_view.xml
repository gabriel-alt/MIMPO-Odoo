<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_partner_form" model="ir.ui.view">
		<field name="name">view_partner_form.mpo_contact_type</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="base.view_partner_form"/>
		<field name="arch" type="xml">
			<xpath expr="//group[@name='purchase']" position="after">
				<group name="contact_type" string="Tipo de Contacto">
					<field name="contact_type_id" />
					<field name="contact_type_name" invisible="1"/>
					<field name="contact_number" attrs="{'invisible': ['|', ('contact_type_id', '=', False), ('contact_type_name', '!=', 'Aduana')]}"/>
					<field name="custom_section" attrs="{'invisible': ['|', ('contact_type_id', '=', False), ('contact_type_name', '!=', 'Aduana')]}" />
					<field name="custom_numenclature" attrs="{'invisible': ['|', ('contact_type_id', '=', False), ('contact_type_name', '!=', 'Aduana')]}" />
					<field name="custom_broker_ids" widget="many2many_tags"
						domain="[('contact_type_id.name', '=', 'Corresponsal')]"
						attrs="{'invisible': ['|', ('contact_type_id', '=', False), ('contact_type_name', '!=', 'Aduana')]}"/>
					<field name="custom_house_ids" widget="many2many_tags"
						attrs="{'invisible': ['|', ('contact_type_id', '=', False), ('contact_type_name', '!=', 'Corresponsal')]}" />
						<!-- domain="[('contact_type_id.name', '=', 'Aduana')]" -->
				</group>
			</xpath>
		</field>
	</record>
</odoo>
