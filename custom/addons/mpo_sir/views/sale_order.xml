<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">view.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sale_order_template_id']" position="after">
                <field name="msa_type"/>
                <field name="sir_id" domain="[('state','=','open')]" options="{'no_create': True}" attrs="{'readonly': [('state', 'not in', ['draft', 'sent'])]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="sir_id" domain="[('state','=','open')]" options="{'no_create': True}" optional="show" attrs="{'readonly': [('parent.state', 'not in', ['draft', 'sent'])]}"/>
            </xpath>
            <xpath expr="//page[@name='order_lines']/field[@name='order_line']" position="attributes">
				<attribute name="context">{'default_sir_id': sir_id}</attribute>
			</xpath>
        </field>
    </record>
    <record id="view_sales_order_filter" model="ir.ui.view">
        <field name="name">sale.order.list.select</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="sir_id"/>
            </xpath>
        </field>
    </record>

</odoo>
