<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">view.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="after">
                <field name="sir_id" domain="[('state','=','open')]" options="{'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
            </xpath>
            <xpath expr="//page[@id='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='analytic_distribution']" position="before">
				<field name="sir_id" domain="[('state','=','open')]" options="{'no_create': True}" force_save="1" optional="show"/>
			</xpath>
			<xpath expr="//page[@id='aml_tab']/field[@name='line_ids']/tree/field[@name='analytic_distribution']" position="before">
				<field name="sir_id" domain="[('state','=','open')]" options="{'no_create': True}" force_save="1" optional="show"/>
			</xpath>
            <xpath expr="//group[@id='header_left_group']" position="inside">
                <field name="downpayment_invoice" attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_invoice_tree" model="ir.ui.view">
        <field name="name">view_invoice_tree.mpo_sir</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date_due']" position="after">
                <field name="sir_id" optional="show"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_invoice_filter" model="ir.ui.view">
        <field name="name">account.invoice.select</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="sir_id"/>
            </xpath>
        </field>
    </record>
    <record id="view_account_payment_search" model="ir.ui.view">
        <field name="name">account.payment.search</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="sir_id"/>
            </xpath>
        </field>
    </record>
</odoo>
