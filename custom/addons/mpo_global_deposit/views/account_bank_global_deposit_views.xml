<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_bank_global_deposit_tree_view" model="ir.ui.view">
        <field name="name">account.bank.global.deposit.tree</field>
        <field name="model">account.bank.global.deposit</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0">
                <field name="partner_id"/>
                <field name="date"/>
                <field name="currency_id" invisible="1"/>
                <field name="amount"/>
                <field name="assigned_amount"/>
                <field name="available_amount"/>
            </tree>
        </field>
    </record>

    <record id="account_bank_global_deposit_form_view" model="ir.ui.view">
        <field name="name">account.bank.global.deposit.form</field>
        <field name="model">account.bank.global.deposit</field>
        <field name="arch" type="xml">
            <form create="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="st_line_id" invisible="1"/>
                            <field name="move_id"/>
                            <field name="partner_id"/>
                            <field name="date"/>
                            <field name="available_sir_ids" invisible="1" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="amount"/>
                            <field name="amount_currency" attrs="{'invisible': [('foreign_currency_id', '=', False)]}" groups="base.group_multi_currency"/>
                            <field name="foreign_currency_id" attrs="{'invisible': [('foreign_currency_id', '=', False)]}" groups="base.group_multi_currency"/>
                            <field name="assigned_amount"/>
                            <field name="available_amount"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Assigned Deposits">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="id" invisible="1"/>
                                    <field name="created_move_id" invisible="1"/>
                                    <field name="record_date"
                                        attrs="{'readonly': [('created_move_id', '!=', False)]}"/>
                                    <field name="sir_id" domain="[('id', 'in', parent.available_sir_ids)]"
                                        attrs="{'readonly': [('created_move_id', '!=', False)]}"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="assigned_amount"
                                        groups="!base.group_multi_currency"
                                        attrs="{'readonly': [('created_move_id', '!=', False)]}"/>
                                    <field name="assigned_amount"
                                        groups="base.group_multi_currency" force_save="1"
                                        attrs="{'readonly': ['|', ('created_move_id', '!=', False), ('foreign_currency_id', '!=', False)]}"/>
                                    <field name="foreign_currency_id"
                                        groups="base.group_multi_currency"
                                        domain="[('id', '!=', currency_id)]"
                                        options="{'no_open': True, 'no_create': True}"
                                        attrs="{'readonly': [('created_move_id', '!=', False)]}"/>
                                    <field name="amount_currency"
                                        groups="base.group_multi_currency"
                                        attrs="{'readonly': [('created_move_id', '!=', False)], 'invisible': [('foreign_currency_id', '=', False)]}"/>
                                    <button name="button_create_open_journal" string="Create/Open Journal Entry"
                                        type="object" groups="account.group_account_invoice"
                                        attrs="{'invisible': ['|', ('id', '=', False), ('assigned_amount', '=', 0.0)]}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="search_account_bank_global_deposit_view" model="ir.ui.view">
        <field name="name">account.bank.global.deposit.search.view</field>
        <field name="model">account.bank.global.deposit</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id" />
                <group expand="0" string="Group By">
                    <filter string="Customer" name="partner" domain="[]" context="{'group_by': 'partner_id'}"/>
                    <filter string="Date" name="date" domain="[]" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_account_bank_global_deposit" model="ir.actions.act_window">
        <field name="name">Global Deposit</field>
        <field name="res_model">account.bank.global.deposit</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="search_account_bank_global_deposit_view"/>
    </record>

    <menuitem id="menu_account_bank_global_deposit" name="Global Deposit"
        parent="account.menu_finance_receivables"
        action="action_account_bank_global_deposit"
        sequence="18"/>
</odoo>
