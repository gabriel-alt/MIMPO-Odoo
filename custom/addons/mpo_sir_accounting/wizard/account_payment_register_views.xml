<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_payment_register_form" model="ir.ui.view">
        <field name="name">account.payment.register.form</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='hide_writeoff_section']" position="after">
				<field name="bill_multi_sir" invisible="1"/>
			</xpath>
            <xpath expr="//form/group" position="after">
				<group name="multi_sir"
                    attrs="{'invisible': ['|', ('bill_multi_sir', '=', False), '|', ('payment_difference', '=', 0.0), '|', ('can_edit_wizard', '=', False), '&amp;', ('can_group_payments', '=', True), ('group_payment', '=', False)]}">
                    <field name="multi_sir_ids" readonly="0" colspan="2" nolabel="1">
                        <tree create="0" editable="top" delete="0">
                            <field name="sir_line_ids" invisible="1" widget="many2many_tags"/>
				            <field name="sir_id" readonly="1" force_save="1"/>
                            <field name="amount"/>
                        </tree>
                    </field>
                </group>
			</xpath>
            <xpath expr="//field[@name='group_payment']" position="after">
				<field name="sir_id" attrs="{'invisible': [('bill_multi_sir', '=', True)]}"/>
			</xpath>
        </field>
    </record>

</odoo>
