<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account_edi.view_move_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_inv_process_now" string="Process Stamp"
                    type="object" class="oe_highlight" groups="account.group_account_invoice"
                    attrs="{'invisible' : ['|', ('edi_document_ids', '!=', []), ('state', '=', 'draft')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
