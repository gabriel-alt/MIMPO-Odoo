<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="account_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">account_res_config_settings_view_form.mpo_sir</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='analytic']" position="after">
             	<h2>Global Deposit</h2>
                <div class="row mt16 o_settings_container" id="global_deposit">
                    <div class="col-12 col-lg-6 o_setting_box" id="global_deposit_journal">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="global_deposit_journal_id"
                                        class="col-lg-3 o_light_label"/>
                                    <field name="global_deposit_journal_id"
                                        options="{'no_create_edit': True, 'no_open': True}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
