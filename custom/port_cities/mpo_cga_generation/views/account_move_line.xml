<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_move_form_inherit_exclude_xml" model="ir.ui.view">
        <field name="name">account.move.form.exclude.from.xml</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']"
                position="after">
                <field name="exclude_from_xml" string="Excluido del XML" readonly="1" />
            </xpath>

        </field>
    </record>

</odoo>