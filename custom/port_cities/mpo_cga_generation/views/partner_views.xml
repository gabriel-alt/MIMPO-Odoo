<odoo>
	<record id="view_partner_property_form" model="ir.ui.view">
		<field name="name">view_partner_property_form.mpo_down_payment_credit_note</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="account.view_partner_property_form"/>
		<field name="arch" type="xml">
			<xpath expr="//group[@name='accounting_entries']" position="inside">
				<field name="property_account_fondo_confiado_id"/>
				<field name="property_account_deposit_id"/>
			</xpath>
		</field>
	</record>
	<record id="l10n_mx_edi_inh_40_res_partner_form" model="ir.ui.view">
		<field name="name">res.partner.form.inherit.mpo</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="l10n_mx_edi_40.l10n_mx_edi_inh_40_res_partner_form"/>
		<field name="arch" type="xml">
			<xpath expr="//page[@name='addenda']/group/field[@name='l10n_mx_edi_fiscal_regime']" position="after">
				<field name="l10n_mx_edi_payment_policy"/>
				<field name="l10n_mx_edi_usage"/>
			</xpath>
		</field>
	</record>
</odoo>
