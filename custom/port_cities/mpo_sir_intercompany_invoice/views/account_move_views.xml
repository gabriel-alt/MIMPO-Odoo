<odoo>
    <record id="account_move_form_view" model="ir.ui.view">
        <field name="name">account.move.form.mpo_sir_intercompany_invoice</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="mpo_sir.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='downpayment_invoice']" position="after">
                <field name="intercom_expense_acc" attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}"/>
            </xpath>
        </field>
    </record>
</odoo>
