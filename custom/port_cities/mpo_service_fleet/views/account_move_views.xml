<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_move_form_view" model="ir.ui.view">
        <field name="name">account.move.form.mpo_service_fleet</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Vehicle" name="vehicle" attrs="{'invisible': [('move_type', '!=', 'in_invoice')]}">
                    <group>
                        <group>
                            <field name="is_service"/>
                            <field name="service_description" attrs="{'invisible': [('is_service', '=', False)]}"/>
                            <field name="service_type_id" attrs="{'invisible': [('is_service', '=', False)]}"/>
                            <field name="service_date" attrs="{'invisible': [('is_service', '=', False)]}"/>
                        </group>
                        <group attrs="{'invisible': [('is_service', '=', False)]}">
                            <field name="vehicle_id"/>
                            <field name="driver_id"/>
                            <label for="odometer" />
                            <div name="odometer_div" class="d-flex">
                                <field name="odometer"/>
                                <span class="oe_inline o_form_label mx-3"> km</span>
                            </div>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
