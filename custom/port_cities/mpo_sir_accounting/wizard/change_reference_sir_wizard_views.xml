<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="change_reference_sir_wizard_view_form" model="ir.ui.view">
        <field name="name">change.reference.sir.wizard.form</field>
        <field name="model">change.reference.sir.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="move_id" invisible="1"/>
                    <field name="sir_id"/>
                    <field name="new_sir_id" required="1"
                        options="{'no_create': True, 'no_open': True, 'no_quick_create': True}"/>
                    <field name="change_reason"/>
                </group>
                <footer>
                    <button string="Confirm" name="action_change_reference_sir" type="object" class="btn-primary"/>
                    <button string="Discard" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
