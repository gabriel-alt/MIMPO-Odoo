<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bi_view_invoice_form_exchange_rate_field_add_inherit" model="ir.ui.view">
            <field name="name">bi.view.invoice.form.exchange.rate.field.add.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="manual_currency_rate_active" attrs="{'readonly': [('state','in',['posted','cancel'])]}"/>
                    <field name="manual_currency_rate" digits="[12,12]" invisible="1"/>
                    <field name="inverse_manual_currency_rate" digits="[12,12]" attrs="{'invisible': [('manual_currency_rate_active', '=', False)], 'required':[('manual_currency_rate_active', '=', True)], 'readonly': [('state','in',['posted','cancel'])]}"/>
                </field>
            </field>
        </record>

        <record id="bi_view_account_payment_form_exchange_rate_field_add_inherit" model="ir.ui.view">
            <field name="name">bi.view.account.payment.form.exchange.rate.field.add.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <field name="journal_id" position="after">
                    <field name="manual_currency_rate_active" force_save="True" attrs="{'readonly': [('state', 'in', ['posted','cancel'])]}"/>
                    <field name="manual_currency_rate" digits="[12,12]" invisible="1"/>
                    <field name="inverse_manual_currency_rate" digits="[12,12]" attrs="{'invisible': [('manual_currency_rate_active', '=', False)],'required':[('manual_currency_rate_active', '=', True)],'readonly': [('state', 'in', ['posted','cancel'])]}"/>
                    <field name="check_active_currency" invisible="1"/>
                </field>
                <field name="amount" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <label for="amount" position="attributes">
                    <attribute name="invisible">1</attribute>
                </label>
                <div name="amount_div" position="before">
                    <label for="amount_currency" string="Amount"/>
                </div>
                <field name="amount" position="after">
                    <field name="amount_currency" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    
                </field>
            </field>
        </record>
    </data>
</odoo>