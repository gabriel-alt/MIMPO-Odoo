<odoo>
    <record id="l10n_mx_edi_inh_res_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.l10n_mx_edi.addenda</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="l10n_mx_edi.l10n_mx_edi_inh_res_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='l10n_mx_edi_addenda']" position="before">
                <field name="cortefiel_vendor"/>
                <field name="addenda_pedimento"/>
            </xpath>
            <xpath expr="//field[@name='l10n_mx_edi_addenda_doc']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='l10n_mx_edi_addenda']" position="attributes">
                <attribute name="groups">base.group_system</attribute>
            </xpath>
            <xpath expr="//field[@name='l10n_mx_edi_addenda']" position="after">
                <field name="l10n_mx_edi_addenda" groups="!base.group_system"
                    options="{'no_open': True, 'no_create': True}"/>
            </xpath>
        </field>
    </record>
</odoo>
