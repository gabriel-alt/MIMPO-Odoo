<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.mpo_sale_profit_margin</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale']" position="inside">
                <label for="gain_margin"/>
                <div class="o_row">
                    <field name="gain_margin" /> %
                </div>
            </xpath>
        </field>
    </record>
    <record id="view_company_form_transport" model="ir.ui.view">
        <field name="name">res.company.form.mpo_transport_request</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="account_inter_company_rules.view_company_inter_change_inherit_form"/>
        <field name="arch" type="xml">
            <field name="intercompany_user_id" position="after">
                <field name="solo_transporte"/>
            </field>
        </field>
    </record>
</odoo>

