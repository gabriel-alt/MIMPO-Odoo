<odoo>
    <!-- Rates -->
    <record id="customer_rate_service_tree_view" model="ir.ui.view">
        <field name="name">customer.rate.service.tree</field>
        <field name="model">customer.rate.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_ids" widget="many2many_tags"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <record id="customer_rate_service_form_view" model="ir.ui.view">
        <field name="name">customer.rate.service.form</field>
        <field name="model">customer.rate.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="e.g. Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <!-- <label for="start_date" string="Validity"/>
                            <div name="start_date_div" class="o_row">
                                <field name="start_date" widget="date" class="oe_inline"/>
                                <span class="flex-grow-1"> - <field name="end_date" class="oe_inline" widget="date"/></span>
                            </div> -->
                            <field name="user_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="tarif_element_ids" nolabel="1" colspan="2">
                            <tree string="Tarif Elements">
                                <field name="name"/>
                                <field name="freight"/>
                                <field name="route_id" attrs="{'invisible': [('freight', '=', False)]}"/>
                                <field name="product_id"/>
                                <field name="customer_price"/>
                                <field name="currency_id"/>
                                <field name="related_fee"/>
                            </tree>
                            <form>
                                <group>
                                    <field name="name"/>
                                    <field name="freight"/>
                                    <field name="route_id" attrs="{'invisible': [('freight', '=', False)]}"/>
                                    <!-- <field name="origin_id" attrs="{'invisible': [('freight', '=', False)]}"/>
                                    <field name="destiny_id" attrs="{'invisible': [('freight', '=', False)]}"/>
                                    <field name="unit_type_id" attrs="{'invisible': [('freight', '=', False)]}"/> -->
                                    <field name="product_id"/>
                                    <field name="product_tmpl_id" invisible="1"/>
                                    <field name="customer_price"/>
                                    <field name="currency_id"/>
                                    <field name="related_fee"/>
                                    <field name="solo_transporte" invisible="1"/>
                                </group>
                                <group attrs="{'invisible': ['|', ('product_id', '=', False), ('solo_transporte', '=', False)]}">
                                    <field name="vendor_cost_ids" nolabel="1" colspan="2"
                                        domain="['|', ('product_id', '=', product_id), ('product_tmpl_id', '=', product_tmpl_id)]"/>
                                </group>
                            </form>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_customer_rate_service" model="ir.actions.act_window">
        <field name="name">Customer Rates</field>
        <field name="res_model">customer.rate.service</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Tarif Element -->
    <record id="customer_rate_tarif_element_tree_view" model="ir.ui.view">
        <field name="name">customer.rate.tarif.element.tree</field>
        <field name="model">customer.rate.tarif.element</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="freight"/>
                <field name="route_id" attrs="{'invisible': [('freight', '=', False)]}"/>
                <field name="product_id"/>
                <field name="customer_price"/>
                <field name="currency_id"/>
                <field name="related_fee"/>
            </tree>
        </field>
    </record>

    <record id="customer_rate_tarif_element_form_view" model="ir.ui.view">
        <field name="name">customer.rate.tarif.element.form</field>
        <field name="model">customer.rate.tarif.element</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="e.g. Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="freight"/>
                            <field name="route_id" attrs="{'invisible': [('freight', '=', False)]}"/>
                            <field name="product_id"/>
                            <field name="product_tmpl_id" invisible="1"/>
                            <field name="customer_price"/>
                            <field name="currency_id"/>
                            <field name="related_fee"/>
                            <field name="rate_id"/>
                            <field name="solo_transporte" invisible="1"/>
                        </group>
                    </group>
                    <group attrs="{'invisible': ['|', ('product_id', '=', False), ('solo_transporte', '=', False)]}">
                        <field name="vendor_cost_ids" nolabel="1" colspan="2"
                            domain="['|', ('product_id', '=', product_id), ('product_tmpl_id', '=', product_tmpl_id)]"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_customer_rate_tarif_element" model="ir.actions.act_window">
        <field name="name">Tarif Element</field>
        <field name="res_model">customer.rate.tarif.element</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>