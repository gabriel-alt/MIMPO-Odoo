<odoo>
    <record id="view_transientmodel_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.transient.form.mpo</field>
        <field name="model">create.saleorder</field>
        <field name="inherit_id" ref="bi_convert_sales_from_purchase.view_transientmodel_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="gain_margin" />
                <field name="request_purchase" invisible="1" />
                <field name="transport_request_id" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='new_order_line_ids']/tree/field[@name='price_unit']" position="after">
                <field name="new_price_unit" string="Unit Price"/>
            </xpath>
            <xpath expr="//field[@name='new_order_line_ids']/tree/field[@name='price_unit']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='new_order_line_ids']" position="attributes">
                <attribute name="colspan">2</attribute>
            </xpath>
        </field>
    </record>
</odoo>