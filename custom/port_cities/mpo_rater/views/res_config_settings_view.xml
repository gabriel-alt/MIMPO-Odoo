<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="inherit_account_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">inherit.account_res_config_settings_view_form.mpo_sir</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mpo_sir.account_res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='account_sir_reference']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="rater_activate_button">
                    <div class="o_setting_left_pane">
                        <field name="rater_button"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="rater_button" string="Activar Tarificador"/>
                        <div class="text-muted">
                            Habilita / deshabilita el botón de cáculo desde ordenes y facturas de ventas.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
